{
  "compilerOptions": {
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "baseUrl": ".",
    "sourceMap": true,
    "moduleResolution": "Bundler",
    "strict": true,
    "module": "ESNext",
    "target": "ES2022",
    "allowJs": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "types": ["jest"],
    "skipLibCheck": true
  },
  "exclude": [
    "**/*.test.ts"
  ]
}
